<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            Remove attendance fields from the timesheets list
        -->

        <record model="ir.ui.view" id="hr_timesheet_linebyline_tree_view">
            <field name="name">hr.timesheet.linebyline.tree</field>
            <field name="model">hr_timesheet_sheet.sheet</field>
            <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_tree_simplified"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='total_attendance']" position="replace"/>
                <xpath expr="/tree/field[@name='total_difference']" position="replace"/>
            </field>
        </record>

        <!--
            Simplified timesheet with no attendence and all days in a single list.
            Much easier to use than the stock timesheet view. Use priority=8 so it replaces the stock view.
        -->

        <record model="ir.ui.view" id="hr_timesheet_linebyline_form_view">
            <field name="name">hr.timesheet.linebyline.form</field>
            <field name="model">hr_timesheet_sheet.sheet</field>
            <field name="priority" eval="8"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Timesheet">
                    <group col="6" colspan="4">
                        <field invisible="1" name="user_id"/>
                        <field invisible="1" name="date_current"/>
                        <field name="employee_id" on_change="onchange_employee_id(employee_id)"/>
                        <field name="department_id" invisible="1"/>
                        <field name="date_from" on_change="on_change_date_period_from(date_current,date_from,date_to)"/>
                        <field name="date_to"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Detail">
                            <field name="timesheet_ids" mode="tree,form" colspan="4" context="{'user_id': user_id, 'date': date_from, 'date_from': date_from, 'date_to': date_to}" nolabel="1">
                                <tree string="Timesheet Lines" editable="top">
                                    <field invisible="1" name="product_id" domain="[('type','=','service')]"/>
                                    <field invisible="1" name="product_uom_id"/>
                                    <field invisible="1" name="journal_id"/>
                                    <field invisible="1" name="user_id" required="1"/>
                                    <field invisible="1" name="amount"/><!-- Recomputed by hr_timesheet.on_change_unit_amount() -->
                                    <field invisible="1" name="general_account_id"/><!-- Recomputed by hr_timesheet.on_change_unit_amount() -->
                                    <field name="date" on_change="on_change_date(date,context)"/>
                                    <field name="account_id" string="Project" on_change="on_change_account_id(account_id)" domain="[('state','=','open'),('type','=','normal'),('project_id','!=',False),'|',('project_id.members','in', [user_id]),('project_id.user_id','=', user_id)]"/>
                                    <field name="task_id" domain="[('state','=','open'),('project_id.analytic_account_id','=',account_id)]" required="True"/>
                                    <field name="name"/>
                                    <field name="unit_amount" string="Hours" widget="float_time" on_change="on_change_unit_amount(product_id, unit_amount, False, product_uom_id, journal_id)" required="True" sum="Total Hours"/>
                                </tree>
                                <form string="Timesheet Line">
                                    <field invisible="1" name="product_id" domain="[('type','=','service')]"/>
                                    <field invisible="1" name="product_uom_id"/>
                                    <field invisible="1" name="journal_id"/>
                                    <field invisible="1" name="user_id" required="1"/>
                                    <field invisible="1" name="amount"/><!-- Recomputed by hr_timesheet.on_change_unit_amount() -->
                                    <field invisible="1" name="general_account_id"/><!-- Recomputed by hr_timesheet.on_change_unit_amount() -->
                                    <group col="12" colspan="4">
                                        <field name="date" colspan="2" on_change="on_change_date(date,context)"/>
                                        <field name="account_id" string="Project" colspan="6" on_change="on_change_account_id(account_id)" domain="[('state','=','open'),('type','=','normal'),('project_id','!=',False),'|',('project_id.members','in', [user_id]),('project_id.user_id','=', user_id)]"/>
                                        <field name="task_id" colspan="4" domain="[('state','=','open'),('project_id.analytic_account_id','=',account_id)]" required="True"/>
                                    </group>
                                    <group col="8" colspan="4">
                                        <field name="name" colspan="6"/>
                                        <field name="unit_amount" string="Hours" colspan="2" widget="float_time" on_change="on_change_unit_amount(product_id, unit_amount, False, product_uom_id, journal_id)" required="True"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="By Day">
                            <field name="period_ids" colspan="4" nolabel="1">
                                <tree string="Days">
                                    <field name="name"/>
                                    <field name="total_timesheet" widget="float_time" sum="Total Hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group col="6" colspan="4">
                        <field name="state" widget="statusbar"/>
                        <button name="button_confirm" states="draft" string="Confirm" type="object" icon="terp-check"/>
                        <button name="action_set_to_draft" states="done" string="Set to Draft" type="object" icon="terp-stock_effects-object-colorize"/>
                        <button name="cancel" states="confirm" string="Refuse" type="workflow" icon="gtk-cancel" groups="base.group_hr_user"/>
                        <button name="done" states="confirm" string="Approve" type="workflow" icon="terp-camera_test" groups="base.group_hr_user"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>