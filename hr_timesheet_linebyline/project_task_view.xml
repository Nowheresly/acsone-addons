<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Hide to_invoice field in task view -->

        <record model="ir.ui.view" id="view_task_form2">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="timesheet_task.view_task_form2"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page/field[@name='work_ids']/tree/field[@name='to_invoice']" position="replace">
                    <field name="to_invoice" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>