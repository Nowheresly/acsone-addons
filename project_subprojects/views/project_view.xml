<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_project_project_filter" model="ir.ui.view">
            <field name="name">project.project.select (project_subprojects)</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="parent_project_id"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <separator/>
                    <filter string="Main Projects" name="main_projects" domain="[('parent_project_id', '=', False)]"/>
                    <filter string="Sub-Projects" name="sub_projects" domain="[('parent_project_id', '!=', False)]"/>
                </xpath>
                <xpath expr="//filter[@name='Parent']" position="attributes">
                    <attribute name="context">{'group_by':'parent_project_id'}</attribute>
                </xpath>
            </field>
        </record> 

        <record id="action_view_subprojects" model="ir.actions.act_window">
            <field name="name">Sub-Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">kanban,tree,form,gantt</field>
            <field name="context">{
                'search_default_Parent': 1,
                'search_default_sub_projects': 1,
            }</field>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
        </record>
        
        <record id="act_project_subprojects_all" model="ir.actions.act_window">
            <field name="name">Sub-Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">kanban,tree,form,gantt</field>
            <field name="context">{
                'search_default_parent_project_id': [active_id],
                'default_parent_project_id': active_id,
                'active_test': False,
            }</field>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
        </record>
        
        
        <record id="project.open_view_project_all" model="ir.actions.act_window">
            <field name="context">{'search_default_Current': 1,
                                   'search_default_main_projects': 1}</field>
        </record>
        
        <record id="edit_project" model="ir.ui.view">
            <field name="name">project.project.form (project_subprojects)</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button class="oe_inline oe_stat_button" type="action"
                        name="%(act_project_subprojects_all)d">
                        <field string="Sub-Projects" name="subprojects_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="before">
                    <field name="parent_project_id" on_change="1" domain="[('id', '!=', active_id),
                                                                           '|', ('parent_project_id', '!=', active_id),
                                                                                ('parent_project_id', '=', False)]"/>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_project_kanban">
            <field name="name">project.project.kanban (project_subprojects)</field>            
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='doc_count']" position="after">
                    <field name='subprojects_count'/>
                </xpath>
                <xpath expr="//div[contains(@class, 'oe_kanban_project_list')]" position="before">
                    <div class="oe_kanban_project_list">
                        <a t-if="record.subprojects_count.raw_value > 0" name="%(act_project_subprojects_all)d" type="action" style="margin-right: 10px">
                            <t t-raw="record.subprojects_count.raw_value"/> Sub-Projects
                        </a>
                    </div>
                </xpath>
            </field>
        </record>
        
        <menuitem action="action_view_subprojects" id="act_subprojects_all" parent="project.menu_project_management" sequence="4"/>
    </data>
</openerp>