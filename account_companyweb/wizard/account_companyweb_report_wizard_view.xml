<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="report_view_wizard">
			<field name="name">account.companyweb.report.form</field>
			<field name="model">account.companyweb.report.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form col="3" string="Custom Report">
					<group colspan="2">
						<field name="chart_account_id" widget='selection' />
					</group>
					<group colspan="2">
						<field name="month" />
						<field name="year" />
					</group>
					<group colspan="2">
						<button name="create_createdSalesDocs" string="CreatedSalesDocs Report"
							type="object" icon="gtk-execute" class="oe_highlight" />
						<button name="create_openSalesDocs" string="OpenSalesDocs Report"
							type="object" icon="gtk-execute" class="oe_highlight" />

					</group>
					<group colspan="2">
						<field name="name" invisible="1" width="100" />
						<field name="data" nolabel="1" readonly="1" width="100"
							filename="export_filename" />
					</group>
					<group colspan="4">
						<button special="cancel" icon="gtk-cancel" string="Cancel" />
					</group>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_report">
			<field name="name">CompanyWeb.be Report</field>
			<field name="res_model">account.companyweb.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="companyweb_report_menu" model="ir.ui.menu">
			<field name="name">CompanyWeb.be Report</field>
			<field name="action" ref="action_report" />
			<field name="parent_id" ref="account.menu_finance_reports" />
		</record>

	</data>
</openerp>

