<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="caro_purchase_order_form">
            <field name="model">purchase.order</field>
            <field name="name">caro.purchase.order.form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath
                    expr="//field[@name='order_line']//tree//field[@name='price_subtotal']"
                    position="after">
                    <field name="transfer_route_id"
                        domain="[('purchase_line_selectable', '=', True)]" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>