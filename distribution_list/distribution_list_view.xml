<?xml version='1.0' encoding='UTF-8' ?>


<openerp>
    <data noupdate="0">

        <record id="distribution_list_form" model="ir.ui.view">
            <field name="name">distribution.list.form</field>
            <field name="model">distribution.list</field>
            <field name="arch" type="xml">
                <form string="Distribution List" version="7.0">
                    <sheet>
                        <header>
                            <button name="mass_mailing" type="object" string="Mass Mailing" groups="base.group_user"/>
                        </header>
                        <div class="oe_title" name="title">
                            <h1>
                                <field name="name" nolabel="1" placeholder="Name"/>
                            </h1>
                        </div>
                        <group col="2" name="info">
                            <field name="dst_model_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="to_include">
                            <separator string="Filters to include" colspan="2"/>
                            <field name="to_include_distribution_list_line_ids" colspan="4" nolabel="1">
                                <tree string="Lines">
                                    <field name="id" invisible="1"/>
                                    <field name="name"/>
                                    <field name="src_model_id" attrs="{'invisible': [('id','!=', False)]}"/>
                                </tree>
                            </field>
                        </group>
                        <group name="to_exclude">
                            <separator string="Filters to exclude" colspan="2"/>
                            <field name="to_exclude_distribution_list_line_ids" colspan="4" nolabel="1">
                                <tree string="Lines">
                                    <field name="name"/>
                                    <field name="src_model_id"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="distribution_list_tree" model="ir.ui.view">
            <field name="name">distribution.list.tree</field>
            <field name="model">distribution.list</field>
            <field name="arch" type="xml">
                <tree string="Distribution List" version="7.0">
                    <field name="name"/>
                    <button groups="base.group_user"  name="get_action_from_domains" string="See Distribution List Result" type="object" icon="gtk-redo"/>
                    <button groups="base.group_user" name="mass_mailing" string="Mass Mailing" type="object" icon="terp-mail-message-new"/>
                </tree>
            </field>
        </record>

        <record id="distribution_list_line_form" model="ir.ui.view">
            <field name="name">distribution.list.line.form</field>
            <field name="model">distribution.list.line</field>
            <field name="arch" type="xml">
                <form string="Filter" version="7.0">
                    <header>
                        <button groups="base.group_user" name="get_list_from_domain" string="See Filter Result" type="object" />
                        <button groups="base.group_user" name="action_partner_selection" type="object" string="Add Filter From Partner
                            Selection" class="oe_edit_only"/>
                    </header>
                    <sheet>
                        <group col="2">
                            <field name="name"/>
                            <field name="src_model_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <separator string="Expression" colspan="2"/>
                            <field name="domain"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="distribution_list_line_tree" model="ir.ui.view">
            <field name="name">distribution.list.line.tree</field>
            <field name="model">distribution.list.line</field>
            <field name="arch" type="xml">
                <tree string="Filters" version="7.0">
                    <field name="name"/>
                    <button groups="base.group_user"  name="get_list_from_domain" string="See Filter Result" type="object" icon="gtk-redo"/>
                </tree>
            </field>
        </record>

        <record id="distribution_list_action" model="ir.actions.act_window">
            <field name="name">Distribution List</field>
            <field name="res_model">distribution.list</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="distribution_list_line_action" model="ir.actions.act_window">
            <field name="name">Filters</field>
            <field name="res_model">distribution.list.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Distribution List" id="distribution_list_menu_root" groups="base.group_user"
            sequence="30"/>
        <menuitem name="Distribution List" id="distribution_list_menu" parent="distribution_list_menu_root"
            sequence="10"/>
        <menuitem name="Distribution List" id="distribution_list_submenu" parent="distribution_list_menu"
            sequence="1" action="distribution_list_action"/>
        <menuitem name="Filters" id="distribution_list_line" parent="distribution_list_menu"
            sequence="2" action="distribution_list_line_action"/>
    </data>
</openerp>
