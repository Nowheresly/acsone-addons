<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="hr_europass_cv_search_view" model="ir.ui.view">
            <field name="name">hr.europass.cv.search.view (hr_europass)
            </field>
            <field name="model">hr.europass.cv</field>
            <field name="arch" type="xml">
                <search string="HR Europass">
                    <field name="raw_content" string="Content" />
                    <group string="Group By...">
                        <filter string="Language" domain="[]"
                            context="{'group_by' : 'language'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- TREE VIEW -->

        <record id="hr_europass_cv_tree_view" model="ir.ui.view">
            <field name="name">hr.europass.cv.tree.view (hr_europass)
            </field>
            <field name="model">hr.europass.cv</field>
            <field name="arch" type="xml">
                <tree string="Employees CV">
                    <field name="name" />
                    <field name="language" />
                    <field name="state" />
                    <field name="last_update" />
                </tree>
            </field>
        </record>

        <record id="hr_europass_consistency_form_view" model="ir.ui.view">
            <field name="name">hr.europass.consistency.form.view
                (hr_europass)</field>
            <field name="model">hr.europass.consistency</field>
            <field name="arch" type="xml">
                <form string="HR Europass Consistensty">
                    <field name="info_learner" widget="html" />
                    <field name="work_experiences" widget="html" />
                    <field name="educations" widget="html" />
                    <field name="skills" widget="html" />
                </form>
            </field>
        </record>

        <!--FORM VIEW -->

        <record id="hr_europass_cv_form_view" model="ir.ui.view">
            <field name="name">hr.europass.cv.form.view (hr_europass)
            </field>
            <field name="model">hr.europass.cv</field>
            <field name="arch" type="xml">
                <form string="CV">
                    <header>
                        <button string="Confirm Update" name="confirm_update"
                            states="draft" type="object"
                            class="oe_highlight" />
                        <field name="state" widget="statusbar"
                            attrs="{'invisible':[('name', '=', False)]}" />
                    </header>
                    <sheet>
                        <div class="oe_title oe_left">
                            <h1>
                                <field name="name"
                                    attrs="{'invisible':[('name', '=', False)]}" />
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button class="oe_inline oe_stat_button"
                                string="Send by email"
                                name="%(mail.action_email_compose_message_wizard)d"
                                type="action"
                                attrs="{'invisible': [('name','=', False)]}"
                                icon="fa-envelope-o" />
                            <button name="update_request_report"
                                class="oe_inline oe_stat_button" type="object"
                                string="Update Report" icon="fa-file-text"
                                attrs="{'invisible': [('draft_cv', '=', False)]}" />
                        </div>
                        <group>
                            <group name="cv_information" string="CV Information"
                                attrs="{'invisible': [('name','=', False)]}">
                                <field name="first_name" readonly="1" />
                                <field name="last_name" readonly="1" />
                                <field name="language" readonly="1" />
                            </group>
                            <group name="document" string="Document">

                                <field name="cv" filename="fname"
                                    attrs="{'readonly': [('name', '!=', False)]}"
                                    width="30" />
                                <field name="fname" invisible="1" />

                                <field name="draft_cv" filename="draft_fname"
                                    attrs="{'invisible':[('name', '=', False)]}"/>
                                <field name="draft_fname" invisible="1"
                                    attrs="{'invisible':[('name', '=', False)]}"/>
                                <field name="last_update"
                                    attrs="{'invisible': [('name','=', False)]}"
                                    readonly="1" />
                            </group>
                        </group>
                        <notebook>
                            <page default_focus="1" string="Note">
                                <group name="label">
                                    <field name="note" widget="html"
                                        nolabel="1" />
                                </group>
                            </page>
                            <page string="Report Update Modification"
                                attrs="{'invisible': [('report_update','=', False)]}">
                                <field name="report_update"
                                    widget="html" readonly="1"/>
                            </page>
                            <page string="Report Language Version"
                                attrs="{'invisible': ['|', ('state','!=','confirm'),
                                    ('hr_europass_consistency_id','=', False)]}">
                                <field name="info_learner"
                                    widget="html"  readonly="1"/>
                                <field name="work_experiences"
                                    widget="html"  readonly="1"/>
                                <field name="educations"
                                    widget="html"  readonly="1"/>
                                <field name="skills"
                                    widget="html" readonly="1"/>
                                <field name="hr_europass_consistency_id"
                                    invisible="1"  readonly="1"/>
                            </page>
                            <page string="Others Info">
                                <group>
                                    <field name="mail_alias_id"
                                        class="oe_read_only oe_inline"
                                        required="0"  readonly="1"/>
                                    <field name="website" widget="url"
                                        attrs="{'invisible': [('name','=', False)]}" />
                                    <field name="hr_employee_id" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_europass_cv_action" model="ir.actions.act_window">
            <field name="name">CV</field>
            <field name="res_model">hr.europass.cv</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="hr_europass_cv_tree_view" />
            <field name="search_view_id" ref="hr_europass_cv_search_view" />
        </record>

        <!-- Menu adding to the HR menu -->
        <menuitem id="hr_europass_menu" name="Human Resources Europass"
            parent="hr.menu_hr_root" />

        <menuitem id="hr_europass_cv_submenu" name="CV"
            parent="hr_europass_menu" action="hr_europass_cv_action" />

    </data>
</openerp>
