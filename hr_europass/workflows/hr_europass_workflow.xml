<?xml version="1.0"?>
<openerp>
    <data>
        <record model="workflow" id="hr_europass_wkf">
            <field name="name">hr.europass.cv.workflow</field>
            <field name="osv">hr.europass.cv</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="new">
            <field name="wkf_id" ref="hr_europass_wkf" />
            <field name="flow_start">True</field>
            <field name="name">new</field>
            <field name="kind">dummy</field>
        </record>
        <record model="workflow.activity" id="refuse">
            <field name="wkf_id" ref="hr_europass_wkf" />
            <field name="name">refuse</field>
            <field name="kind">function</field>
            <field name="action">refuse_new()</field>
        </record>
        <record model="workflow.activity" id="confirm">
            <field name="wkf_id" ref="hr_europass_wkf" />
            <field name="name">confirm</field>
            <field name="kind">function</field>
            <field name="action">confirm()</field>
        </record>
        <record model="workflow.activity" id="draft">
            <field name="wkf_id" ref="hr_europass_wkf" />
            <field name="name">draft</field>
            <field name="kind">dummy</field>
        </record>
        <record model="workflow.activity" id="reset_confirm">
            <field name="wkf_id" ref="hr_europass_wkf" />
            <field name="name">reset_confirm</field>
            <field name="kind">function</field>
            <field name="action">confirm_draft()</field>
        </record>
        <record model="workflow.activity" id="reset_refuse">
            <field name="wkf_id" ref="hr_europass_wkf" />
            <field name="name">reset_refuse</field>
            <field name="kind">function</field>
            <field name="action">refuse()</field>
        </record>


        <record model="workflow.transition"
            id="from_new_to_confirmed">
            <field name="act_from" ref="new" />
            <field name="act_to" ref="confirm" />
            <field name="signal">confirm</field>
        </record>

        <record model="workflow.transition"
            id="from_refuse_end_to_confirmed">
            <field name="act_from" ref="refuse" />
            <field name="act_to" ref="confirm" />
            <field name="signal">confirm</field>
        </record>
        <record model="workflow.transition" id="from_new_to_refuse">
            <field name="act_from" ref="new" />
            <field name="act_to" ref="refuse" />
            <field name="signal">refuse</field>
        </record>
        <record model="workflow.transition"
            id="from_confirmed_to_draft">
            <field name="act_from" ref="confirm" />
            <field name="act_to" ref="draft" />
        </record>

        <record model="workflow.transition"
            id="from_draft_to_confirm">
            <field name="act_from" ref="draft" />
            <field name="act_to" ref="reset_confirm" />
            <field name="signal">confirm</field>
        </record>

        <record model="workflow.transition" id="from_draft_to_refuse">
            <field name="act_from" ref="draft" />
            <field name="act_to" ref="reset_refuse" />
            <field name="signal">refuse</field>
        </record>

        <record model="workflow.transition"
            id="from_refuse_to_confirmed">
            <field name="act_from" ref="reset_refuse" />
            <field name="act_to" ref="confirm" />
        </record>

        <record model="workflow.transition"
            id="from_confirm_to_confirmed">
            <field name="act_from" ref="reset_confirm" />
            <field name="act_to" ref="confirm" />
        </record>

    </data>
</openerp>
