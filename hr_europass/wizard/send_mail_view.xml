<?xml version="1.0"?>
<openerp>
    <data>
        <!-- send CV view -->
        <record model="ir.ui.view" id="send_email_view">
            <field name="name">hr.europass.cv.sendmail.form</field>
            <field name="model">hr.europass.cv.sendmail</field>
            <field name="arch" type="xml">
                <form string="Send CV by E-mail" version="7.0">
                    <group>
                        <field name="addressDest" />
                    </group>
                    <group>
                        <field name="changeContent" on_change="onchange_content(changeContent)"/>
                        <field name="content" widget="html" />
                    </group>

                    <footer>
                        <button name="send_xml_by_mail" type="object"
                            string="Send" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link"
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <!-- 
            Send a mail action 
            (action is called by the main part of the application:hrEuropass)
        -->

        <record model="ir.actions.act_window" id="send_mail_act">
            <field name="name">Send CV by Email</field>
            <field name="res_model">hr.europass.cv.sendmail</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="send_email_view" />
            <field name="target">new</field>
        </record>
    </data>
</openerp>
