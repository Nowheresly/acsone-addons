<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="TreeGrid.add_group_options">
        <i class="fa fa-plus-circle group_management" t-att-data-group_id="group_id"
            data-mode="create"/>
    </t>
    <t t-name="TreeGrid.group_options">
        <a>
            <t t-if="read_mode">
                <t t-call="TreeGrid.add_group_options"/>
                <t t-if="group_id">
                    <i t-att-data-group_id="group_id" class="fa fa-cog group_management"
                        data-mode="edit"></i>
                    <i t-att-data-group_id="group_id" class="fa fa-trash-o group_management"
                        data-mode="unlink"/>
                </t>
            </t>
            <t t-if="!read_mode">
                <i class="fa fa-plus"/>
            </t>
        </a>
    </t>
    <t t-name="TreeGrid.group_row">
        <tr t-att-data-group_id="group and group.id" row_type="group" t-att-level="group.level" t-att-parent_id="group.parent_id and group.parent_id[0]">
            <t t-set="style"
                t-value="group and 'background-position: ' + 10*(group.level) + 'px; padding-left: ' + (4 + 10*(group.level)) + 'px;'" />
            <th t-att-data-id="'name'" t-att-style="'white-space: nowrap;' + style " class="oe_group_name treeview-tr oe-treeview-first ">
                <t t-if="group">
                    <i t-att-id="'vision_controller'+group.id" class="fa fa-arrow-down oe_group_handle"
                        t-att-data-group_id="group.id" t-att-level="group.level"/>
                    <t t-esc="group.name" />
                </t>
            </th>
        </tr>
    </t>
    <t t-name="TreeGrid.group_manager_form">
        <div t-att-title="(mode=='edit' and 'Edit' or mode=='create' and 'Create' or mode=='unlink' and 'Unlink')+' Group'"> 
            <div class="group_container" style="overflow:hidden;">
                <t t-if="mode!='unlink'">
                    <div class="row" style="widht:100;">
                        <div class="col-lg-4">
                            Name
                        </div>
                        <div class="col-lg-8">
                            <input type="text" name="group_name" class="oe-field-input" required="required"/>
                        </div>
                    </div>
                    <t t-if="mode=='edit'">
                        <div class="row group_position">
                            <div class="col-lg-12">
                                <h4>Move Group</h4>
                                <div class="row">
                                    <div class="col-lg-4">
                                         Before Another Group
                                    </div>
                                    <div class="col-lg-2">
                                        <input type="checkbox" name="group_sequence_before"
                                            class="oe-field-input mutuallyexclusive" data-key="sequence"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <select name="group_sequence_before" class="hidden"/>
                                    </div>
                                 </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                         After Another Group
                                    </div>
                                    <div class="col-lg-2">
                                        <input type="checkbox" name="group_sequence_after"
                                            class="oe-field-input mutuallyexclusive" data-key="sequence"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <select name="group_sequence_after" class="hidden"/>
                                    </div>
                                 </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                         Inside Another Group
                                    </div>
                                    <div class="col-lg-2">
                                        <input type="checkbox" name="group_parent"
                                            class="oe-field-input mutuallyexclusive" data-key="parent_id"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <select name="group_parent" class="hidden" />
                                    </div>
                                 </div>
                            </div>
                        </div>
                    </t>
                </t>
                <t t-if="mode=='unlink'">
                    <p>
                        Warning! This action will remove all its children groups and all
                        the associated members and will not be reversible.
                        Do you agree with that?
                    </p>
                </t>
            </div>
        </div>
    </t>
    <t t-name="TreeGrid.select_option">
        <option t-att-value="key_value">
            <t t-esc="group_name"/>
        </option>
    </t>
    <t t-name="TreeGrid.align_first_thead">
        <th class="oe_list_first_header_columns"></th>
    </t>
    <t t-name="TreeGrid.align_first_td_row">
        <td></td>
    </t>
</templates>