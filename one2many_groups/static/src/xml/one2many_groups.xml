<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="TreeGrid.add_group_options">
        <i class="fa fa-cog"></i>
    </t>
    <t t-name="TreeGrid.group_options">
        <a t-att-data-group_id="group_id">
            <t t-if="read_mode">
                <t t-call="TreeGrid.add_group_options" />
                <i class="fa fa-trash-o"/>
            </t>
            <t t-if="!read_mode">
                <i class="fa fa-plus"/>
            </t>
        </a>
    </t>
    <t t-name="TreeGrid.group_row">
        <tr t-att-data-group_id="group.id" row_type="group" t-att-level="group.level" t-att-parent_id="group.parent_id and group.parent_id[0]">
            <t t-set="style"
                t-value="'background-position: ' + 19*(group.level) + 'px; padding-left: ' + (4 + 19*(group.level)) + 'px;'" />
            <th t-att-colspan="colspan" t-att-style="'white-space: nowrap;' + style " class="treeview-tr oe-treeview-first ">
                <i t-att-id="'vision_controller'+group.id" class="fa fa-arrow-down oe_group_handle"/>
                <t t-esc="group.name" />
            </th>
        </tr>
    </t>
    <t t-name="TreeGrid.manage_group">
        <div title="Manage Group"> 
            <div class="group_container" style="overflow:hidden;">
                <div class="row" style="widht:100;">
                    <div class="col-lg-2">
                        Name
                        <div class="toggle on toggle-modern" />
                    </div>
                    <div class="col-lg-6">
                        <input type="text" name="group_name" class="oe-field-input" style="width:100%;"/>
                    </div>
                    <div class="col-lg-2">
                        <input type="checkbox" name="checkbox_mode"/>
                    </div>
                </div>
                <div class="row group_position hidden">
                    <div class="col-lg-12">
                        <strong>Group Position</strong>
                        <div class="row">
                            <div class="col-lg-2">
                                First
                            </div>
                            <div class="col-lg-10">
                                <input type="checkbox" name="first" class="oe-field-input mutuallyexclusive"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        After
                                    </div>
                                    <div class="col-lg-6">
                                        <input type="checkbox" name="group_sequence" class="oe-field-input mutuallyexclusive"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <select name="group_sequence" style="width:85%;" class="hidden">
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        Into
                                    </div>
                                    <div class="col-lg-6">
                                        <input type="checkbox" name="group_parent" class="oe-field-input mutuallyexclusive"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <select name="group_parent" style="width:85%;" class="hidden">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="TreeGrid.select_option">
        <option t-att-value="key_value">
            <t t-esc="group_name"/>
        </option>
    </t>
    <t t-name="TreeGrid.unlink_confirm">
        <div title="Unlink Group">
            <p>
                Warning! This action will remove all its children groups and all
                the associated members and will not be reversible.
                Do you agree with that?
            </p>
        </div>
    </t>
    <t t-name="TreeGrid.align_first_thead">
        <th class="oe_list_first_header_columns" t-att-width="4+19*max_level"></th>
    </t>
    <t t-name="TreeGrid.align_first_td_row">
        <td></td>
    </t>
</templates>