<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="group_options">
        <i class="fa fa-plus-circle"></i>
        <i class="fa fa-trash-o"></i>
    </t>
    <t t-name="TreeGrid">
        <div t-att-class="widget.widget_class">
            <table class="oe_list_content">
                <tbody>
                </tbody>
            </table>
        </div>
    </t>
    <t t-name="TreeGrid.master_rows">
        <tr>
            <th>
                <t t-esc="group['name']" />
            </th>
        </tr>
    </t>
    <tr t-name="TreeGrid.members_rows" t-foreach="records" t-as="record"
        t-att-id="'treerow_' + record.id" t-att-data-id="record.id">
        <td t-foreach="fields_view" t-as="field" t-att-data-id="record.id">
            <span t-if="!field.attrs.modifiers.invisible">
                <t
                    t-esc="render(record[field.attrs.name], fields[field.attrs.name])" />
            </span>
        </td>
    </tr>
</templates>