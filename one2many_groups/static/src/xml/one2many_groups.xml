<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="TreeGrid.group_options">
        <i class="fa fa-plus-circle"></i>
        <i class="fa fa-trash-o"></i>
    </t>
    <t t-name="TreeGrid.add_group">
        <tr>
            <th style="display:inline">
                <t t-call="TreeGrid.group_options"/>
            </th>
        </tr>
    </t>
    <t t-name="TreeGrid.group_row">
        <tr t-att-data-group_id="group.id" t-att-group_level="group.level">
            <th style="display:inline">
                <t t-esc="group.name"/>
            </th>
        </tr>
    </t>
</templates>